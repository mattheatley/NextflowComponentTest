
/* SETUP */

    def trace_timestamp = new java.util.Date().format( 'yyyyMMddHHmmss')

    params {

        traceDir = "./logs/reports_${trace_timestamp}"

        publishDir = "./published"

    }


/* nextflow run ... -with-report [file_name] */ 

    report {
        enabled   = true
        file      = "${params.traceDir}/report_${trace_timestamp}.html"
    }


/* nextflow run ... -with-trace */ 

    trace {
        enabled   = true
        file      = "${params.traceDir}/trace_${trace_timestamp}.txt"
    }


/* nextflow run ... -with-timeline [file_name] */ 

    timeline {
        enabled   = true
        file      = "${params.traceDir}/timeline_${trace_timestamp}.html"
    }


/* nextflow run ... -with-dag [file_name] */ 

    dag {
        enabled   = true
        overwrite = true
        file      = "${params.traceDir}/dag_${trace_timestamp}.dot" // <dot|html|mmd|pdf|png|svg|gexf>
    }